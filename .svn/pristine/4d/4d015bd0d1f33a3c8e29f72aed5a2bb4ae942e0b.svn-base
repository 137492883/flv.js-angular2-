.xscreenContainer {
    margin:0 auto;
    padding: 20px;
    background-color: #c0c0c0;
    display: inline-block;
}

.xscreen {
    margin:0 auto;
    position:relative;
    width: auto;
    background-color: #c0c0c0;
    list-style-type: none;
    padding:0px;
}

.xscreen .selecting {
    background: #FECA40;
}

.xscreen .selected {
    background: #F39814;
    color: white;
}

.xscreen ol {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

.xscreen ol li {
    margin: 0px;
    padding: 0px;
    float: left;
    width: 80px;
    height: 80px;
    font-size: 1px;
    text-align: center;
    border: 1px solid #c5c5c5;
    background: #f6f6f6;
    font-weight: normal;
    color: #454545;
}

.xscreen ol li.selected {
    background-color: #DDD;
}

.xscreen .location {
    text-align: center;
    position: absolute;
}

.xscreen .location span{
    cursor: pointer;
    font-size: 20px;
    font-weight: bold;
    margin-left: 6px;
}

.xscreen .location img{
    margin-bottom: 6px;
    width: 20px;
    height: 20px;
}

.xscreen .console {
    position: absolute;
    top:-20px;
    left:0px;
}

.center-vertical {
    vertical-align: middle;
}
